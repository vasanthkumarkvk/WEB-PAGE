   function vasanth(){

 let inputvalue=document.getElementById("input").value
 
  let city=input.options[input.selectedIndex].value
  

 let population=0
let lrate=0
let lang=""

switch(city)

   {
      
        case  'chennai':

          population=56965
          lrate = 56.46
          lang = "tamil" 
  break;

  case  'banglore':

         population=15454
         lrate = 46.46
         lang = "kannada"
 break;

case    'mumbai': 

           population=457685
           lrate = 85.65
           lang = "hindi"
break;

case    'kerala':  

              population=54654
              lrate = 68.65
              lang = "malayalam" 

break;

}

let text=`the city of ${city} and there are population ${population} in and the letracyrate of ${lrate}% and the people speeking language ${lang}`


 let new1 = document.createElement("div")
  
  new1.id="output"
   
   document.getElementById("noodels").appendChild(new1)

  document.getElementById("output").innerHTML=text


   }
